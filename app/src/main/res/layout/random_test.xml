<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/main"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/load_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />
        <TextView
            android:id="@+id/tv_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下载数据..."
            android:textColor="#000"
            android:textSize="10sp"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:src="@mipmap/exam_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_andinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/exam_title"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#990000"
        android:layout_margin="5sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="剩余时间"
        android:textColor="#000"
        android:id="@+id/tv_time"
        android:layout_gravity="center_horizontal"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/tv_No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textColor="#000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tvExamTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            tools:text="这个标志有何含义?"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/im_exam_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@mipmap/myicon"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="#000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_op1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            tools:text="车道数变少"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:textColor="#000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_op2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            tools:text="合流处"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_03"
        android:layout_width="match_parent"
        android:layout_marginLeft="15sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textColor="#000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_op3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
           tools:text="应急变道"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:textColor="#000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_op4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            tools:text="向左变道"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >
      <CheckBox
          android:id="@+id/cb_01"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="A"
          android:layout_marginLeft="15dp"/>
        <CheckBox
            android:id="@+id/cb_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:layout_marginLeft="15dp"/>
        <CheckBox
            android:id="@+id/cb_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:text="C"
            android:layout_marginLeft="15dp"/>
        <CheckBox
            android:id="@+id/cb_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
    <Gallery
        android:id="@+id/Gallery1"
        android:spacing="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Gallery>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:drawableLeft="@mipmap/exam_pre32x32"
            android:text="上一题"
            android:onClick="preQuestion"
            android:background="@null"
            android:layout_alignParentLeft="true"/>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btn_next"
            android:layout_height="wrap_content"
           android:drawableRight="@mipmap/exam_next32x32"
            android:text="下一题"
            android:onClick="nextQuestion"
            android:background="@null"
            android:layout_alignParentRight="true"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_below="@+id/btn_next"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/exam_next32x32"
            android:text="交卷"
            android:onClick="commit"
            android:background="@null"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

